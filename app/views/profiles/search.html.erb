							<% end %>
							
							<% if (@authoredPathways.length  > 0) %>
								<tr><td height="10"/></tr>
								<tr><td colspan="2" class="text" style="text-align:center"><a href="/profiles/rss"><img class="clean" id="feed" width="18px" src="/images/feed.png"/></a>&nbsp;&nbsp;<i>We're at <%= @authoredPathways.length %> Pathway<% if @authoredPathways.length != 1 %>s<% end %> and counting!</i></td></tr>
							<% end %>
						<table>
					</td></tr>

					<tr><td><table class="dot"><tr><td class="dot"/></tr></table></td></tr>


					<!-- Hidden search form -->
					<tr style="display:none;">
						<td><% form_for :user, :url => {:action => :search} do |form| %><%= submit_tag "search", :class => "submit", :id => "search_input" %><% end %></td>
					</tr>

				</table>
			</td>
		
		</tr></table></td></tr>

<% content_for :javascript do %>		
<script type="text/javascript">

	var featuredTitle = "Featured Pathways";
	var searchTitle = "Search Results";
	
	var searchString = "Search for alumni or student pathways";
	var box = document.getElementById('searchBox');
	box.value = searchString;
	box.style.color = "gray";
	
	function searchBoxClick(e)
	{
		var box = document.getElementById('searchBox');
		
		if (box.value == searchString)
		{
			box.value = "";
			box.style.color = "black";
		}
	}

	function searchImgClick()
	{	
		var box = document.getElementById('searchBox');
		
		if (box.value == searchString)
		{
			box.click();
			box.focus();
			return false;
		}

		doSearch(box.value);
	}

	function searchBoxKey(e)
	{
		var code = (e && e.which) ? e.which : event.keyCode;
		if(code == 13)
		{
			return doSearch(document.getElementById('searchBox').value);
		}
		
		return true;
	}

	function doSearch(value)
	{	
		var input = document.getElementById('search_input');
		input.value = value;
		input.click();
		return false;
	}

	function rollOver(imgName, imgSrc)
   	{
		document.getElementById(imgName).src = imgSrc;
	}

</script>
<% end %>