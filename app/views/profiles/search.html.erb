						<td valign="top"><table class="clean">
							<tr><td class="title"><a href="/profiles/view/<%= @user3[:id] %>"><%= @user3.name %> <%= @controller.getClassYears(@user3) %></a></td></tr>
							<tr><td height="3"/></tr>
